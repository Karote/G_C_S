<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coretronic.drone">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/icon"
        android:name="com.coretronic.drone.main.DroneG2Application"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <activity android:name="com.coretronic.drone.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.coretronic.drone.main.PilotingActivity" />
        <activity android:name="com.coretronic.drone.main.UpdateActivity" />
        <activity android:name="com.coretronic.drone.main.AlbumActivity" />

        <service android:name="com.coretronic.drone.communication.SocketService" />
        <receiver android:name="com.coretronic.drone.SocketStatusReceiver" />

        <service android:name="com.coretronic.drone.service.DroneConnectionService" />
        <service android:name="com.parrot.arsdk.ardiscovery.ARDiscoveryService" />

    </application>
</manifest>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/drone_log_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="#b3000000">

            <TextView
                style="@style/mav_info_title_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLIGHT DISTANCE" />

            <TextView
                android:id="@+id/tv_flight_distance"
                style="@style/mav_info_content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5m" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:background="#b3000000">

            <TextView
                style="@style/mav_info_title_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLIGHT TIME" />

            <TextView
                android:id="@+id/tv_flight_time"
                style="@style/mav_info_content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00" />

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/flight_history_recycler_view"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:fadeScrollbars="true"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btn_activate_plan"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/btn_activate_plan"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="ACTIVATE PLAN"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toEndOf="@id/btn_activate_plan"
        android:layout_toRightOf="@id/btn_activate_plan"
        android:background="@drawable/btn_plan_white"
        android:padding="3dp">

        <Button
            android:id="@+id/btn_map_type"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_map_type" />
    </LinearLayout>

</RelativeLayout>
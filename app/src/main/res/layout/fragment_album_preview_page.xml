<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:clickable="true">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
            >
        <ImageButton android:id="@+id/preview_back_btn"
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:background="@drawable/btn_bg"
                     android:src="@android:drawable/ic_menu_revert"
                     android:gravity="left"/>

        <TextView android:id="@+id/preview_media_num_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="8/11"
                  android:textSize="26sp"
                  android:gravity="center"
                  android:layout_gravity="center"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_gravity="right">


            <ImageButton android:id="@+id/preview_share_btn"
                         android:src="@drawable/ic_album_share_n"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="right"
                    />

            <ImageButton android:id="@+id/preview_rubbish_bin_btn"
                         android:src="@drawable/ic_album_delete_n"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="right"/>
            />
        </LinearLayout>
    </FrameLayout>
    <Gallery android:id="@+id/previewGallery"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center_horizontal"/>


</LinearLayout>
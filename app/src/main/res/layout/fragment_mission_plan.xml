<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <WebView
            android:id="@+id/waypoint_webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:background="#bf000000"
        android:orientation="horizontal"
        android:clickable="true">

        <com.coretronic.drone.ui.StatusView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp" />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/custom_layout_menu" />

        <include
            android:id="@+id/custom_layout_edit_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            layout="@layout/custom_layout_edit_marker" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mav_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="#b3000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mav_info_title_text_style"
                android:text="FLIGHT TIME"/>

            <TextView
                android:id="@+id/flight_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mav_info_content_text_style"
                android:text="00:00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:background="#b3000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mav_info_title_text_style"
                android:text="ALTITUDE"/>

            <TextView
                android:id="@+id/altitude_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mav_info_content_text_style"
                android:text="5m" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:background="#b3000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mav_info_title_text_style"
                android:text="SPEED"/>

            <TextView
                android:id="@+id/speed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mav_info_content_text_style"
                android:text="300.3km/h" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:background="#b3000000">

            <TextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mav_info_content_text_style"
                android:text="0.0, 0.0" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_plan_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_plan_go"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_plan_go"/>

            <LinearLayout
                android:id="@+id/layout_plan_stop"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="3dp"
                android:background="@drawable/btn_plan_white">
                <Button
                    android:id="@+id/btn_plan_stop"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_plan_stop" />
            </LinearLayout>
        </LinearLayout>

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/btn_plan_location_group"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mission_item_recycler_view"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/top_layout"
        android:fadeScrollbars="true"
        android:scrollbars="vertical" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="@dimen/setting_progress_text_width"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/setting_progress_text_margin_right"
        android:fontFamily="@string/font_roboto_regular"
        android:gravity="center|right"
        android:textColor="@color/blue_sky"
        android:textSize="@dimen/setting_progress_text_size"
        android:text="30"
        android:textStyle="bold"/>

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:progress="10"
        android:progressDrawable="@drawable/custom_seek_bar_progress_drawable"
        android:thumb="@drawable/thumb"/>

</LinearLayout>
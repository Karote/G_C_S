        <RelativeLayout
            android:id="@+id/btn_start_follow"
            android:layout_width="204dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_follow_me">

            <TextView
                android:id="@+id/tx_start_follow"
                style="@style/follow_me_button_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Start Follow" />

            <View
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_toLeftOf="@id/tx_start_follow"
                android:background="@drawable/ico_action_start_follow" />

        </RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="258dp">

    <LinearLayout
        android:id="@+id/title_rect"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="#000">

        <TextView
            android:id="@+id/text_detail_waypoint_name"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-black"
            android:text="44"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="#ffffff" />

        <View
            android:id="@+id/icon_detail_waypoint_type"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ico_indicator_plan_waypoint"/>

        <Spinner
            android:id="@+id/spinner_detail_waypoint_type"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="#000000" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_below="@id/title_rect"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/mission_plan_detail_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableRight="@drawable/ico_indicator_waypoint_arrow"
                    android:text="Flight Altitude" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="m"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#e5e5e5" />

            <com.coretronic.drone.missionplan.spinnerWheel.WheelHorizontalView
                android:id="@+id/altitude_wheel"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                app:isAllVisible="false"
                app:isCyclic="false"
                app:visibleItems="5" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    style="@style/mission_plan_detail_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableRight="@drawable/ico_indicator_waypoint_arrow"
                    android:text="Delay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="sec"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#e5e5e5" />

            <com.coretronic.drone.missionplan.spinnerWheel.WheelHorizontalView
                android:id="@+id/delay_wheel"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                app:isAllVisible="false"
                app:isCyclic="false"
                app:visibleItems="5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/mission_plan_detail_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ico_indicator_waypoint_arrow"
                        android:text="Latitude" />

                    <TextView
                        android:id="@+id/text_waypoint_lat"
                        android:layout_width="100dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="2dp"
                        android:background="#c9c9c9"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="38.8530172"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/mission_plan_detail_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ico_indicator_waypoint_arrow"
                        android:text="Longitude" />

                    <TextView
                        android:id="@+id/text_waypoint_lng"
                        android:layout_width="100dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="2dp"
                        android:background="#c9c9c9"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="38.8530172"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_detail_delete"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/btn_detail_delete_bg"
                android:text="Delete"
                android:textColor="#FF0000"
                android:textSize="14sp" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
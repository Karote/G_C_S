<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_plan_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drone_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_control_group_drone_location_button_icon" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/map_control_button_group_divider_height"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/control_button_group_divider_background" />

        <ImageView
            android:id="@+id/my_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_control_group_my_location_button_icon" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/map_control_button_group_divider_height"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/control_button_group_divider_background" />

        <ImageView
            android:id="@+id/fit_map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_control_group_fit_map_button_icon" />

    </LinearLayout>

    <ImageView
        android:id="@+id/map_type_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_plan_white"
        android:src="@drawable/map_control_group_map_type_button_icon" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_plan_white"
        android:orientation="horizontal"
        android:padding="@dimen/control_button_group_background_padding">

        <Button
            android:id="@+id/drone_landing_button"
            style="@style/drone_landing_text_style"
            android:layout_width="@dimen/control_button_group_landing_button_width"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:text="@string/drone_landing_button_text" />

        <View style="@style/control_button_group_divider" />

        <ImageView
            android:id="@+id/drone_rtl_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_drone_rtl_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_plan_white"
        android:orientation="horizontal"
        android:padding="@dimen/control_button_group_background_padding">

        <ImageView
            android:id="@+id/drone_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_drone_location_button" />

        <View style="@style/control_button_group_divider" />

        <ImageView
            android:id="@+id/my_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_my_location_button" />

        <View style="@style/control_button_group_divider" />

        <ImageView
            android:id="@+id/fit_map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_fit_map_button" />

    </LinearLayout>

    <ImageView
        android:id="@+id/map_type_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_plan_white"
        android:padding="@dimen/control_button_group_background_padding"
        android:src="@drawable/icon_map_type_button" />

</LinearLayout>
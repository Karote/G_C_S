<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_fragment_title_height"
        android:background="@color/blue_sky">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_action_back_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@string/font_roboto_medium"
            android:text="SETTINGS"
            android:textColor="@color/white"
            android:textSize="@dimen/setting_fragment_title_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rc_connected_indicator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:drawableEnd="@drawable/indicator_disconnected"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/indicator_disconnected"
            android:fontFamily="@string/font_roboto_medium"
            android:text="@string/rc_disconnected"
            android:textColor="@color/white_transparent_50"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/drone_connected_indicator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:drawableEnd="@drawable/indicator_disconnected"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/indicator_disconnected"
            android:fontFamily="@string/font_roboto_medium"
            android:text="@string/drone_disconnected"
            android:textColor="@color/white_transparent_50"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="#1f1f1f">

            <TextView
                android:id="@+id/rc_txrx"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="1dp"
                android:gravity="end|center_vertical"
                android:paddingEnd="24dp"
                android:paddingRight="24dp"
                android:text="@string/rc_tx_rx"
                android:textColor="@color/settings_main_title_text_normal_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rc_txrx"
                android:background="#4f4f4f" />

            <TextView
                android:id="@+id/gain"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_below="@id/rc_txrx"
                android:layout_marginTop="1dp"
                android:gravity="end|center_vertical"
                android:paddingEnd="24dp"
                android:paddingRight="24dp"
                android:text="@string/gain"
                android:textColor="@color/settings_main_title_text_normal_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/gain"
                android:background="#4f4f4f" />

            <TextView
                android:id="@+id/battery_and_failsafe"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_below="@id/gain"
                android:layout_marginTop="1dp"
                android:gravity="end|center_vertical"
                android:paddingEnd="24dp"
                android:paddingRight="24dp"
                android:text="@string/battery_and_failsafe"
                android:textColor="@color/settings_main_title_text_normal_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/battery_and_failsafe"
                android:background="#4f4f4f" />

            <TextView
                android:id="@+id/general"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_below="@id/battery_and_failsafe"
                android:layout_marginTop="1dp"
                android:gravity="end|center_vertical"
                android:paddingEnd="24dp"
                android:paddingRight="24dp"
                android:text="@string/general"
                android:textColor="@color/settings_main_title_text_normal_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/general"
                android:background="#4f4f4f" />

            <View
                android:id="@+id/focus_bar"
                android:layout_width="12dp"
                android:layout_height="74dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/primary_color_normal" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/settings_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
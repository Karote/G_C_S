<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="92dp"
    android:layout_height="92dp"
    android:background="@drawable/photo_frame_thumb">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/video_tag"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:src="@drawable/ico_thumbnail_play"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/select_tag"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:src="@drawable/photo_frame_thumbnail_delete"
        android:visibility="gone" />

    <TextView
        android:id="@+id/imageview_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:gravity="center|bottom"
        android:textSize="12sp"
        android:visibility="gone" />
</FrameLayout>
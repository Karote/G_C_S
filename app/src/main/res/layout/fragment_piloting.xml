<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <SurfaceView
        android:id="@+id/rtsp_surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/bg_piloting" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/pilot_bar_bg" />

    <LinearLayout
        android:id="@+id/ll_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:background="@drawable/ico_pilot_rec_time" />

        <TextView
            android:id="@+id/tv_recording_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center"
            android:text="00:10"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:shadowColor="#000000"
            android:shadowRadius="1"
            android:shadowDx="0"
            android:shadowDy="0"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/btn_pilot_back" />

    <com.coretronic.drone.ui.StatusView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="56dp" />

    <FrameLayout
        android:layout_width="102dp"
        android:layout_height="44dp"
        android:layout_gravity="right"
        android:layout_marginRight="9dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pilot_altitude_bg" />

        <TextView
            android:id="@+id/tv_altitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"
            android:text="0m"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_hold_altitude"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/ico_pilot_altitude_unlock"
            android:visibility="gone"/>
    </FrameLayout>

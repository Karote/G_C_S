<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
        <WebView android:id="@+id/waypoint_webview"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent" />
    </FrameLayout>
    <RelativeLayout android:id="@+id/top_bar"
            android:layout_alignParentTop="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FF888888">
        <Button android:id="@+id/button_back_to_main"
                android:background="@drawable/ic_action_previous_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"/>
        <Spinner android:id="@+id/mission_plan_spinner"
                 android:entries="@array/mission_plan_menu"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:spinnerMode="dropdown"
                 android:layout_centerVertical="true"
                 android:layout_toRightOf="@id/button_back_to_main">
        </Spinner>
        <FrameLayout
                android:id="@+id/framelayout_edit_marker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
            <LinearLayout
                    android:id="@+id/delete_icon_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <Button android:id="@+id/button_delete_marker"
                        android:background="@drawable/ic_action_discard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Button android:id="@+id/button_drawline"
                        android:background="@drawable/ic_action_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Button android:id="@+id/button_marker"
                        android:background="@drawable/ic_action_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/delete_option_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <Button
                        android:id="@+id/button_delete_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delete_done"/>
                <Button
                        android:id="@+id/button_delete_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delete_all"/>
            </LinearLayout>
        </FrameLayout>
        <Button android:id="@+id/undo"
                android:background="@drawable/ic_action_undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/framelayout_edit_marker"/>
    </RelativeLayout>
    <LinearLayout android:id="@+id/mav_info"
                  android:layout_below="@id/top_bar"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/flight_time_text"
                  android:text="FLIGHT TIME      00:00"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:background="#88888888"/>
        <TextView android:id="@+id/dist_left_text"
                  android:text="Distance Left          5m"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:background="#88888888"/>
        <TextView android:id="@+id/speed_text"
                  android:text="SPEED          5.2 km/h"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:background="#88888888"/>
        <TextView android:id="@+id/location_text"
                  android:text="38.8530172, -78.035971"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:background="#88888888"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/bottom_bar"
                  android:layout_alignParentBottom="true"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
        <Button android:id="@+id/button_go"
                android:text="GO"
                android:background="#FF888888"
                android:layout_margin="10dp"
                android:layout_width="250dp"
                android:layout_height="50dp"/>
        <ImageButton android:id="@+id/button_my_location"
                     android:background="#FF888888"
                     android:src="@drawable/ic_action_location_found"
                     android:layout_marginTop="10dp"
                     android:layout_marginLeft="10dp"
                     android:layout_width="50dp"
                     android:layout_height="50dp"/>
        <ImageButton android:id="@+id/button_mav_location"
                     android:background="#FF888888"
                     android:src="@drawable/ic_action_send"
                     android:layout_marginTop="10dp"
                     android:layout_marginLeft="3dp"
                     android:layout_width="50dp"
                     android:layout_height="50dp"/>
        <ImageButton android:id="@+id/button_fit_map"
                     android:background="#FF888888"
                     android:src="@drawable/ic_action_full_screen"
                     android:layout_marginTop="10dp"
                     android:layout_marginLeft="3dp"
                     android:layout_width="50dp"
                     android:layout_height="50dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mission_item_recycler_view"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_bar"
            android:layout_alignParentRight="true"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"/>
</RelativeLayout>
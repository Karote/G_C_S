    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/main_fragment_select_device_spinner_padding_left"
    android:paddingRight="@dimen/main_fragment_select_device_spinner_padding_right">


    <TextView android:id="@+id/spinner_item_tv"
              xmlns:android="http://schemas.android.com/apk/res/android"

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/all_of_row_layout"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/points_list_item_height"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true">

    <RelativeLayout
        android:id="@+id/rowItemLayout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/view_focusbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/plan_point_detail_arrow" />

        <FrameLayout
            android:id="@+id/rowSideView"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/view_focusbar"
            android:layout_toRightOf="@id/view_focusbar">

            <TextView
                android:id="@+id/rowNameView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:fontFamily="@string/font_roboto_regular"
                android:gravity="center"
                android:textColor="@color/point_list_item_row_name_unselected"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="44" />

            <ImageView
                android:id="@+id/takeoff_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/waypoint_list_drone_label"
                android:visibility="gone" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/rowSideView"
            android:layout_toRightOf="@id/rowSideView"
            android:background="@color/black_transparent_80"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_waypoint_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ico_indicator_plan_waypoint" />

            <TextView
                android:id="@+id/rowAltitudeView"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/font_roboto_condensed"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="200" />

            <TextView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/rowAltitudeView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@string/font_roboto_medium"
                android:text="@string/unit_in_meter"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rowSpeedView"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="36dp"
                android:layout_marginRight="36dp"
                android:fontFamily="@string/font_roboto_condensed"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="4" />

            <TextView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/rowSpeedView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@string/font_roboto_medium"
                android:text="@string/speed_unit"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/btn_select_check"
        android:layout_width="44dp"
        android:layout_height="60dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginRight="-8dp"
        android:layout_toLeftOf="@id/rowItemLayout"
        android:layout_toStartOf="@id/rowItemLayout"
        android:background="@drawable/select_checkbox_background" />

</RelativeLayout>
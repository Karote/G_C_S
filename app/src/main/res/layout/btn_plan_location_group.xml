<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="44dp"
        android:background="@drawable/btn_plan_white"
        android:orientation="horizontal"
        android:padding="3dp">

        <Button
            android:id="@+id/btn_plan_land"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/btn_plan_land" />

        <View
            android:layout_width="1dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:background="#d1d1d1" />

        <Button
            android:id="@+id/btn_plan_rtl"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_plan_rtl" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:background="@drawable/btn_plan_white"
        android:orientation="horizontal"
        android:padding="3dp">

        <Button
            android:id="@+id/button_drone_location"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_plan_drone" />

        <View
            android:layout_width="1dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:background="@color/locate_group_bg" />

        <Button
            android:id="@+id/button_my_location"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_plan_location" />

        <View
            android:layout_width="1dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:background="@color/locate_group_bg" />

        <Button
            android:id="@+id/button_fit_map"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_plan_showall" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/btn_plan_white"
        android:padding="3dp">

        <Button
            android:id="@+id/btn_map_type"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_map_type" />
    </LinearLayout>

</LinearLayout>
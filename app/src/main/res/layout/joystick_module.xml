<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <FrameLayout android:id="@+id/frame_layout"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="bottom">
            <TextView android:id="@+id/tv_dx"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="x: 0"
                      android:textColor="@android:color/white"/>
            <TextView android:id="@+id/tv_dy"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="y: 0"
                      android:textColor="@android:color/white"/>
        </LinearLayout>
        <com.coretronic.drone.ui.JoyStickSurfaceView
                android:id="@+id/joystick"
                android:layout_width="@dimen/joystick_size"
                android:layout_height="@dimen/joystick_size"
                android:layout_gravity="center|bottom"
                android:layout_margin="36dp"/>
    </FrameLayout>
</FrameLayout>
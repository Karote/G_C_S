<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/number_pad_width"
    android:layout_height="@dimen/number_pad_height"
    android:background="@drawable/popup_arrow_picker_bg"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:layout_width="@dimen/number_pad_display_text_width"
            android:layout_height="@dimen/number_pad_display_text_height"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:background="#f0f0f0"
            android:fontFamily="@string/font_roboto_condensed"
            android:gravity="center_vertical"
            android:text="12"
            android:textColor="#727272"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number_pad_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/transparent"
            android:fontFamily="@string/font_roboto_condensed"
            android:text="@string/ok"
            android:textColor="#474747"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp">

        <Button
            android:id="@+id/number_pad_1"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:background="@drawable/popdialog_button_bg"
            android:fontFamily="@string/font_roboto_regular"
            android:text="1"
            android:textColor="@drawable/number_pad_num_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/number_pad_2"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/popdialog_button_bg"
            android:fontFamily="@string/font_roboto_regular"
            android:text="2"
            android:textColor="@drawable/number_pad_num_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/number_pad_3"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/popdialog_button_bg"
            android:fontFamily="@string/font_roboto_regular"
            android:text="3"
            android:textColor="@drawable/number_pad_num_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/number_pad_4"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_below="@id/number_pad_1"
            android:background="@drawable/popdialog_button_bg"
            android:fontFamily="@string/font_roboto_regular"
            android:text="4"
            android:textColor="@drawable/number_pad_num_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/number_pad_5"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_below="@id/number_pad_2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/popdialog_button_bg"
            android:fontFamily="@string/font_roboto_regular"
            android:text="5"
            android:textColor="@drawable/number_pad_num_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/number_pad_6"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/number_pad_3"
            android:background="@drawable/popdialog_button_bg"
            android:fontFamily="@string/font_roboto_regular"
            android:text="6"
            android:textColor="@drawable/number_pad_num_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/number_pad_7"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_below="@id/number_pad_4"
            android:background="@drawable/popdialog_button_bg"
            android:fontFamily="@string/font_roboto_regular"
            android:text="7"
            android:textColor="@drawable/number_pad_num_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/number_pad_8"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_below="@id/number_pad_5"
            android:layout_centerHorizontal="true"
            android:background="@drawable/popdialog_button_bg"
            android:fontFamily="@string/font_roboto_regular"
            android:text="8"
            android:textColor="@drawable/number_pad_num_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/number_pad_9"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/number_pad_6"
            android:background="@drawable/popdialog_button_bg"
            android:fontFamily="@string/font_roboto_regular"
            android:text="9"
            android:textColor="@drawable/number_pad_num_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/number_pad_0"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_below="@id/number_pad_7"
            android:background="@drawable/popdialog_button_bg"
            android:fontFamily="@string/font_roboto_regular"
            android:text="0"
            android:textColor="@drawable/number_pad_num_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/number_pad_dot"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_below="@id/number_pad_8"
            android:layout_centerHorizontal="true"
            android:background="@drawable/popdialog_button_bg"
            android:fontFamily="@string/font_roboto_regular"
            android:text="."
            android:textColor="@drawable/number_pad_num_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/number_pad_delete"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/number_pad_9"
            android:background="@drawable/popdialog_button_bg"
            android:fontFamily="@string/font_roboto_regular"
            android:text="del"
            android:textColor="@drawable/number_pad_num_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>
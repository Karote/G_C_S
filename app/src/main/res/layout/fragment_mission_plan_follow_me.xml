<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/mav_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="#b3000000">

            <TextView
                style="@style/mav_info_title_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLIGHT TIME" />

            <TextView
                android:id="@+id/flight_time_text"
                style="@style/mav_info_content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:background="#b3000000">

            <TextView
                style="@style/mav_info_title_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALTITUDE" />

            <TextView
                android:id="@+id/altitude_text"
                style="@style/mav_info_content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5m" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:background="#b3000000">

            <TextView
                style="@style/mav_info_title_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPEED" />

            <TextView
                android:id="@+id/speed_text"
                style="@style/mav_info_content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300.3km/h" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:background="#b3000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location_lat_text"
                style="@style/mav_info_content_text_style"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="-90.0000000," />

            <TextView
                android:id="@+id/location_lng_text"
                style="@style/mav_info_content_text_style"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="-180.0000000" />

        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/btn_plan_location_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <include
        android:id="@+id/layout_follow_me"
        layout="@layout/fragment_follow_me"
        android:layout_width="228dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>
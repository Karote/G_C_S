<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_communication_light"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/level_list_communicate_light"/>

    <FrameLayout
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="6dp">

        <ImageView
            android:id="@+id/iv_gps"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/level_list_gps_status"/>

        <TextView
            android:id="@+id/tv_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@string/font_roboto_medium"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:visibility="gone"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_rf"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="6dp"
        android:src="@drawable/level_list_rf_status"/>

    <ProgressBar
        android:id="@+id/progress_battery"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="36dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:progressDrawable="@drawable/progress_drawable_battery"/>

    <TextView
        android:id="@+id/tv_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:fontFamily="@string/font_roboto_condensed"
        android:text="@string/zero_percent"
        android:textColor="@color/white"
        android:textSize="14sp"/>
</LinearLayout>
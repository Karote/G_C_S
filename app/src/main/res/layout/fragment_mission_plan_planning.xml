<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mission_item_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/mission_item_recycler_view_bottom_margin"
        android:layout_marginEnd="@dimen/mission_item_recycler_view_right_margin"
        android:layout_marginRight="@dimen/mission_item_recycler_view_right_margin"
        android:layout_marginTop="@dimen/mission_item_recycler_view_top_margin"
        android:fadeScrollbars="true"
        android:scrollbars="vertical" />

    <FrameLayout
        android:id="@+id/way_point_detail_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/way_point_detail_container_right_margin"
        android:layout_marginRight="@dimen/way_point_detail_container_right_margin"
        android:layout_marginTop="@dimen/way_point_detail_container_top_margin"
        android:layout_toLeftOf="@id/mission_item_recycler_view"
        android:layout_toStartOf="@id/mission_item_recycler_view"
        android:clickable="true" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_margin="20dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="horizontal">
        <TextView
                style="@style/settings_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:layout_marginRight="10dp"
                android:text="Altitude Limit"/>
        <FrameLayout android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1">
            <SeekBar android:layout_width="250dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center|left"/>
        </FrameLayout>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="horizontal">
        <TextView style="@style/settings_title"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center|right"
                  android:layout_marginRight="10dp"
                  android:text="Vertical Speed Max"/>
        <FrameLayout android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1">
            <SeekBar android:layout_width="250dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center|left"/>
        </FrameLayout>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="horizontal">
        <TextView style="@style/settings_title"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center|right"
                  android:layout_marginRight="10dp"
                  android:text="Rotation Speed Max"/>
        <FrameLayout android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1">
            <SeekBar android:layout_width="250dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center|left"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="horizontal">
        <TextView style="@style/settings_title"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center|right"
                  android:layout_marginRight="10dp"
                  android:text="Tilt Angle Max"/>
        <FrameLayout android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1">
            <SeekBar android:layout_width="250dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center|left"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:orientation="vertical">

            <TextView
                style="@style/settings_title"
                android:text="ALTITUDE MAX" />

            <TextView
                style="@style/settings_title"
                android:text="VERTICAL SPEED MAX" />

            <TextView
                style="@style/settings_title"
                android:text="ROTATION SPEED MAX" />

            <TextView
                style="@style/settings_title"
                android:text="TILT ANGLE MAX" />


            <TextView
                style="@style/settings_title"
                android:text="Low Power Protection" />

            <TextView
                style="@style/settings_title"
                android:text="Flash Light" />

            <TextView
                style="@style/settings_title"
                android:text="RTL" />

            <TextView
                style="@style/settings_title"
                android:text="FLAT TRIM" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="68dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.coretronic.drone.ui.SeekBarTextView
                android:id="@+id/setting_bar_altitude_max"
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <com.coretronic.drone.ui.SeekBarTextView
                android:id="@+id/setting_bar_rotation_max"
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <com.coretronic.drone.ui.SeekBarTextView
                android:id="@+id/setting_bar_tilt_angle_max"
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <com.coretronic.drone.ui.SeekBarTextView
                android:id="@+id/setting_bar_vertical_speed_max"
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <TextView
                style="@style/settings_title"
                android:layout_height="38dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <include
                    android:id="@+id/switch_avoidance"
                    layout="@layout/switch_module" />

                <com.coretronic.drone.ui.SeekBarTextView
                    android:id="@+id/setting_bar_low_power_flash"
                    android:layout_width="match_parent"
                    android:layout_height="38dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <include
                    android:id="@+id/switch_altitude_lock"
                    layout="@layout/switch_module" />

                <com.coretronic.drone.ui.SeekBarTextView
                    android:id="@+id/setting_bar_low_power_rtl"
                    android:layout_width="match_parent"
                    android:layout_height="38dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_flat_trim"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_gravity="left|center"
                android:background="@drawable/btn_setting_bg"
                android:gravity="center"
                android:text="Trim"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
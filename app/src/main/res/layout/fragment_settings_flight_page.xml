<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:scrollbarSize="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/setting_item_margin_left"
        android:layout_marginRight="@dimen/setting_item_margin_right"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginBottom="@dimen/setting_item_margin_bottom"
            android:orientation="horizontal">

            <TextView
                style="@style/settings_title"
                android:text="@string/altitude_max"/>

            <com.coretronic.drone.ui.SeekBarTextView
                android:id="@+id/setting_bar_altitude_max"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginBottom="@dimen/setting_item_margin_bottom"
            android:orientation="horizontal">

            <TextView
                style="@style/settings_title"
                android:text="@string/vertical_speed_max"/>

            <com.coretronic.drone.ui.SeekBarTextView
                android:id="@+id/setting_bar_vertical_speed_max"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginBottom="@dimen/setting_item_margin_bottom"
            android:orientation="horizontal">

            <TextView
                style="@style/settings_title"
                android:text="@string/rotation_speed_max"/>

            <com.coretronic.drone.ui.SeekBarTextView
                android:id="@+id/setting_bar_rotation_max"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginBottom="@dimen/setting_item_margin_bottom"
            android:orientation="horizontal">

            <TextView
                style="@style/settings_title"
                android:text="@string/tilt_angle_max"/>

            <com.coretronic.drone.ui.SeekBarTextView
                android:id="@+id/setting_bar_tilt_angle_max"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/setting_low_power_title"
                style="@style/settings_title"
                android:layout_height="@dimen/setting_item_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/low_power_protection"/>


            <TextView
                android:id="@+id/setting_low_power_level_1_title"
                style="@style/settings_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:layout_alignBottom="@+id/setting_low_power_title"
                android:layout_alignRight="@+id/setting_low_power_title"
                android:layout_alignTop="@+id/setting_low_power_title"
                android:text="@string/low_power_protection_level_1"/>

            <Switch
                android:id="@+id/switch_low_power_level_one"
                style="@style/setting_power_protect_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/setting_low_power_title"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/setting_low_power_title"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="18dp"/>

            <com.coretronic.drone.ui.SeekBarTextView
                android:id="@+id/setting_bar_low_power_flash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@+id/switch_low_power_level_one"
                android:layout_toRightOf="@+id/setting_low_power_level_1_title"/>

            <TextView
                android:id="@+id/setting_low_power_level_2_title"
                style="@style/settings_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:layout_alignRight="@+id/setting_low_power_title"
                android:layout_below="@+id/setting_low_power_level_1_title"
                android:text="@string/low_power_protection_level_2"/>

            <Switch
                android:id="@+id/switch_low_power_level_two"
                style="@style/setting_power_protect_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/setting_low_power_level_2_title"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/setting_low_power_level_2_title"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="18dp"/>

            <com.coretronic.drone.ui.SeekBarTextView
                android:id="@+id/setting_bar_low_power_rtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/switch_low_power_level_two"
                android:layout_alignTop="@+id/switch_low_power_level_two"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@+id/switch_low_power_level_two"
                android:layout_toRightOf="@+id/setting_low_power_level_2_title"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginBottom="@dimen/setting_item_margin_bottom"
            android:orientation="horizontal">

            <TextView
                style="@style/settings_title"
                android:text="@string/flat_trim"/>

            <Button
                android:id="@+id/btn_flat_trim"
                android:layout_width="@dimen/setting_flight_page_execute_button_width"
                android:layout_height="32dp"
                android:layout_gravity="left|center"
                android:background="@drawable/setting_fragment_setting_button_bg"
                android:gravity="center"
                android:text="@string/execute"
                android:textColor="@color/white"
                android:textSize="@dimen/setting_flight_page_execute_text_size"
                android:textStyle="bold"/>

            <TextView
                style="@style/settings_title"
                android:layout_marginLeft="@dimen/setting_flight_page_execute_margin"
                android:fontFamily="@string/font_roboto_medium"
                android:gravity="center_vertical"
                android:text="@string/last_execution"/>

            <TextView
                android:id="@+id/tv_flat_trim_exe_time"
                style="@style/settings_title"
                android:fontFamily="@string/font_roboto_medium"
                android:gravity="left|center_vertical"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
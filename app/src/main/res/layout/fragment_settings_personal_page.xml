<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_margin="10dp">
        <TextView style="@style/settings_title"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_gravity="right"
                  android:gravity="center"
                  android:text="Drone G 2.0 Network Name"/>
        <TextView style="@style/settings_title"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_gravity="right"
                  android:gravity="center"
                  android:text="Interface Opacity"/>
        <TextView style="@style/settings_title"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_gravity="right"
                  android:gravity="center"
                  android:text="SD Card Record"
                  android:layout_margin="@dimen/settings_margin"/>
        <TextView style="@style/settings_title"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_gravity="right"
                  android:gravity="center"
                  android:text="Flip Enable"/>
        <TextView style="@style/settings_title"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_gravity="right"
                  android:gravity="center"
                  android:text="Flip Orientation"
                  android:layout_margin="@dimen/settings_margin"/>
    </LinearLayout>
    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_margin="10dp">
        <EditText android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:text="conidroneg2_12345"
                  android:textSize="@dimen/settings_title_size"/>
        <SeekBar android:layout_width="250dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="left"/>
        <Switch android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="left"/>
        <Switch android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="left"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal">
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Front"
                    android:textSize="@dimen/settings_title_size"/>
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Back"
                    android:textSize="@dimen/settings_title_size"/>
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Left"
                    android:textSize="@dimen/settings_title_size"/>
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Right"
                    android:textSize="@dimen/settings_title_size"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_noti_gps" />

    <TextView
        android:id="@+id/notification_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/notification_icon"
        android:layout_toRightOf="@id/notification_icon"
        android:fontFamily="@string/font_roboto_medium"
        android:text="GPS No signal"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/notification_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/notification_content_text"
        android:layout_alignStart="@id/notification_content_text"
        android:layout_below="@id/notification_content_text"
        android:fontFamily="@string/font_roboto_medium"
        android:text="now"
        android:textColor="#929292"
        android:textSize="12sp" />

</RelativeLayout>
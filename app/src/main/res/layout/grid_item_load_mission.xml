<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/load_mission_grid_item_layout"
    android:layout_width="144dp"
    android:layout_height="122dp">

    <TextView
        android:id="@+id/datetime_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_roboto_medium"
        android:text="Yesterday"
        android:textColor="#474747"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/screen_shot_image"
        android:layout_width="144dp"
        android:layout_height="108dp"
        android:layout_below="@id/datetime_text"
        android:layout_marginTop="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_transparent_60">

        <TextView
            android:id="@+id/flight_distance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@string/font_roboto_medium"
            android:text="34.6m"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/flight_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@string/font_roboto_medium"
            android:text="00:18:24"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>
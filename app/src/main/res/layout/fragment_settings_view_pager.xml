<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:clickable="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_fragment_title_height"
        android:background="@color/blue_sky">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_action_back_light"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@string/font_roboto_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/setting_fragment_title_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/default_set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ico_setup_reset_bg"
            android:drawableLeft="@drawable/ico_setup_reset"
            android:drawablePadding="@dimen/setting_fragment_reset_drawable_padding"
            android:fontFamily="@string/font_roboto_light"
            android:gravity="center"
            android:paddingLeft="@dimen/setting_fragment_reset_padding_right"
            android:paddingRight="@dimen/setting_fragment_reset_padding_left"
            android:text="@string/reset"
            android:textColor="@color/white"
            android:textSize="@dimen/setting_fragment_reset_text_size"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.coretronic.drone.ui.PageIndicator
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"/>
    </FrameLayout>
</LinearLayout>
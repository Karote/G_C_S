<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="158dp"
              android:layout_height="36dp"
              android:gravity="right|center_vertical"
              android:orientation="horizontal"
              android:visibility="gone">

    <Button
        android:id="@+id/btn_action_plan_undo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/btn_action_plan_undo"/>

    <FrameLayout
        android:layout_width="116dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_delete_icon"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_action_plan_delete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_action_plan_delete"/>

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:background="@color/black_transparent_35"
                android:paddingLeft="4dp">

                <RadioGroup
                    android:id="@+id/radiogroup_multi_or_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/btn_action_multi_point"
                        android:layout_width="30dp"
                        android:layout_height="36dp"
                        android:background="@drawable/btn_action_multi_point"
                        android:button="@android:color/transparent"
                        />

                    <RadioButton
                        android:id="@+id/btn_action_tap_and_go"
                        android:layout_width="30dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/btn_action_plan_point"
                        android:button="@color/transparent"
                        android:checked="true"/>
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_delete_option"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:background="@color/black_transparent_40"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_delete_done"
                android:layout_width="52dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:background="@drawable/btn_delete_bg"
                android:text="@string/delete_done"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btn_delete_all"
                android:layout_width="52dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:background="@drawable/btn_delete_bg"
                android:gravity="center"
                android:text="@string/delete_all"
                android:textColor="@color/red"
                android:textSize="12sp"/>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_plan_white"
        android:orientation="horizontal"
        android:padding="@dimen/control_button_group_background_padding">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/plan_go_button"
                style="@style/drone_go_text_style"
                android:layout_width="@dimen/control_button_group_landing_button_width"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:text="@string/btn_go"
                android:visibility="gone" />

            <Button
                android:id="@+id/drone_landing_button"
                style="@style/drone_landing_text_style"
                android:layout_width="@dimen/control_button_group_landing_button_width"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:text="@string/drone_landing_button_text" />
        </FrameLayout>

        <View style="@style/control_button_group_divider" />

        <ImageView
            android:id="@+id/drone_rtl_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drone_control_group_drone_rtl_button_icon" />

        <View style="@style/control_button_group_divider" />

        <ImageView
            android:id="@+id/plan_stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drone_control_group_drone_stop_button_icon" />
    </LinearLayout>

</LinearLayout>
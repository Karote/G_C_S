<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/darker_gray"
              android:clickable="true">
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true">
        <Switch
                android:id="@+id/album_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textOff="@string/album_toggle_drone"
                android:textOn="@string/album_toggle_smartphone"/>

        <ImageButton android:id="@+id/rubbish_bin_btn"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:layout_marginRight="20dp"
                     android:src="@drawable/ic_album_delete_n"
                     android:visibility="visible"/>

        <LinearLayout android:id="@+id/delete_option_layout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_below="@id/rubbish_bin_btn"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="20dp"
                      android:visibility="gone">
            <Button android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"/>

            <Button android:id="@+id/delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"/>

        </LinearLayout>
    </RelativeLayout>
    <FrameLayout android:id="@+id/album_fragment_container"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginTop="10dp"
                 android:background="@android:color/white">

    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settings_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/settings_title_size</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="progress_style">
        <item name="android:progressDrawable">@drawable/custom_seek_bar_progress_drawable</item>
        <item name="android:thumb">@drawable/thumb</item>
    </style>

    <style name="mav_info_title_text_style">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textColor">@color/drone_info_text</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="mav_info_content_text_style">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fontFamily">@string/font_roboto_condensed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mission_plan_detail_text_style">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textColor">#34a7ff</item>
        <item name="android:textSize">@dimen/mission_plan_detail_text_size</item>
    </style>

    <style name="way_point_detail_name_text_style">
        <item name="android:fontFamily">@string/font_roboto_black</item>
        <item name="android:textSize">@dimen/way_point_detail_name_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="way_point_detail_unit_text_style">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">@dimen/way_point_detail_unit_text_size</item>
        <item name="android:textColor">@color/go_dialog_unit</item>
    </style>

    <style name="way_point_detail_location_text_style">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">@dimen/way_point_detail_location_text_size</item>
        <item name="android:textColor">#2d2d2d</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Default" parent="@android:style/Theme.Holo.Light"></style>

    <style name="Theme.NoTitle" parent="@android:style/Theme.Holo.Light.NoActionBar"></style>

    <style name="Theme.FullScreen" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"></style>


    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

</resources>
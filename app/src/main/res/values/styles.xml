<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settings_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/settings_title_size</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="progress_style">
        <item name="android:progressDrawable">@drawable/custom_seek_bar_progress_drawable</item>
        <item name="android:thumb">@drawable/thumb</item>
    </style>

    <style name="mav_info_background_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/mav_info_background_height</item>
        <item name="android:background">@color/black_transparent_70</item>
    </style>

    <style name="mav_info_title_text_style">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/drone_info_text</item>
        <item name="android:textSize">@dimen/mav_info_title_text_size</item>
    </style>

    <style name="mav_info_content_text_style">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/mav_info_content_text_size</item>
    </style>

    <style name="mission_plan_detail_text_style">
        <item name="android:textColor">#34a7ff</item>
        <item name="android:textSize">@dimen/mission_plan_detail_text_size</item>
    </style>

    <style name="missionItemNumberPickerView">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">#34a7ff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tap_and_go_altitude_spinner_wheel_text_style">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">#34a7ff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="drone_landing_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/control_button_group_landing_button_text_size</item>
        <item name="android:textColor">#36A8FF</item>
    </style>

    <style name="drone_go_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/control_button_group_landing_button_text_size</item>
        <item name="android:textColor">#669900</item>
    </style>

    <style name="way_point_detail_name_text_style">
        <item name="android:textSize">@dimen/way_point_detail_name_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="way_point_detail_type_spinner_text_style">
        <item name="android:textSize">@dimen/way_point_detail_type_spinner_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="way_point_detail_unit_text_style">
        <item name="android:textSize">@dimen/way_point_detail_unit_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="way_point_detail_location_text_style">
        <item name="android:textSize">@dimen/way_point_detail_location_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Default" parent="@android:style/Theme.Holo.Light"></style>

    <style name="Theme.NoTitle" parent="@android:style/Theme.Holo.Light.NoActionBar"></style>

    <style name="Theme.FullScreen" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"></style>


    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


    <style name="mav_info_panel_layout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="drone_control_button_group_layout_style">
        <item name="android:layout_marginLeft">@dimen/drone_control_button_group_left_margin</item>
        <item name="android:layout_marginTop">@dimen/drone_control_button_group_top_margin</item>
    </style>

    <style name="map_control_button_group_layout_style">
        <item name="android:layout_marginTop">@dimen/map_control_button_group_top_margin</item>
        <item name="android:layout_toRightOf">@id/drone_control_button_group</item>
        <item name="android:layout_marginLeft">@dimen/map_control_button_group_left_margin</item>
    </style>

</resources>
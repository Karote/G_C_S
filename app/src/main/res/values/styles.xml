<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settings_title">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/setting_item_title_width</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:fontFamily">@string/font_roboto_condensed</item>
        <item name="android:textSize">@dimen/settings_title_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="mav_info_title_text_style">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textColor">@color/drone_info_text</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="settings_title_lv_1">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="settings_title_lv_2">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="settings_title_lv_3">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7f7f7f</item>
    </style>

    <style name="settings_title_lv_4">
        <item name="android:fontFamily">@string/font_roboto_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_color_normal</item>
    </style>

    <style name="settings_title_lv_5">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#a0a0a0</item>
        <item name="android:layout_marginTop">-3dp</item>
    </style>

    <style name="settings_button_text">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="motor_test_button_text_style">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/motor_test_button_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="preflight_check_title_text_style">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#474747</item>
    </style>

    <style name="preflight_check_status_text_style">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="mav_info_content_text_style">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fontFamily">@string/font_roboto_condensed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mission_plan_detail_text_style">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textColor">#949494</item>
        <item name="android:textSize">@dimen/mission_plan_detail_text_size</item>
    </style>

    <style name="waypoint_detail_name_text_style">
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/waypoint_detail_name_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="waypoint_detail_unit_text_style">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">@dimen/waypoint_detail_unit_text_size</item>
        <item name="android:textColor">#BDBDBD</item>
    </style>

    <style name="waypoint_detail_location_text_style">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#2d2d2d</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Default" parent="@android:style/Theme.Holo.Light"></style>

    <style name="Theme.NoTitle" parent="@android:style/Theme.Holo.Light.NoActionBar"></style>

    <style name="Theme.FullScreen" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"></style>


    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="setting_power_protect_switch">
        <item name="android:textColor">@color/white</item>
        <item name="android:textOff">OFF</item>
        <item name="android:textOn">ON</item>
        <item name="android:textSize">@dimen/setting_switch_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:thumb">@drawable/switch_selector_custom</item>
        <item name="android:track">@drawable/switch_track_custom</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="waypoint_detail_type_spinner_text_style">
        <item name="android:fontFamily">@string/font_roboto_condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="waypoint_detail_delete_button_text_style">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tap_and_go_dialog_location_text_style">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#949494</item>
    </style>
</resources>